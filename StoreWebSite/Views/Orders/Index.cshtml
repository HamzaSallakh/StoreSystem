@model IEnumerable<Domain.ViewModel.OrdersModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="AddOrders">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrdersId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BuyersId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrdersDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrederSum)
            </th>
            <th>Edit</th>
            <th>Delete</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrdersId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BuyersId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrdersDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrederSum)
            </td>
            <td>
                <a asp-action="UpdateOrders" asp-route-id="@item.OrdersId"> <img src="~/images/Icons/IconEdit.png" style="margin-left: 10px; width: 25px " class="center" /> </a>
            </td>
            <td>
                <a asp-action="DeleteOrders" asp-route-id="@item.OrdersId"> <img src="~/images/Icons/IconDelete.png" style="margin-left: 10px; width: 25px " class="center" /> </a>
            </td>

            <td>
                <a asp-action="DetailsOrders" asp-route-id="@item.OrdersId"> <img src="~/images/Icons/IconDetails.png" style="margin-left: 10px; width: 25px " class="center" /> </a>
            </td>
        </tr>
}
    </tbody>
</table>
