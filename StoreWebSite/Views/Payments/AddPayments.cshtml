@model Domain.ViewModel.PaymentsModel

@{
    ViewData["Title"] = "AddPayments";
}

<h1>AddPayments</h1>

<h4>PaymentsModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddPayments">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PaymentsId" class="control-label"></label>
                <input asp-for="PaymentsId" readonly class="form-control" />
                <span asp-validation-for="PaymentsId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrdersId" class="control-label"></label>
                @*<input asp-for="OrdersId" class="form-control" />*@
                <select asp-for="OrdersId" class="form-control" asp-items="@(new SelectList( ViewBag.OrdersData,"OrdersId","OrederSum"))"></select>
                <span asp-validation-for="OrdersId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentsDate" class="control-label"></label>
                <input asp-for="PaymentsDate" class="form-control" />
                <span asp-validation-for="PaymentsDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

